@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
<thead class="thead-plain">
    <tr>
        <th rowspan="2" class="text-left">Sector / Sub Sector</th>
        <th class="short nowrap" colspan="2">Nominal<br>b. IDR/m. USD</th>
        <th rowspan="2"></th>
        <th class="short nowrap" colspan="2">Volume<br>(b. IDR/m. USD)</th>
    </tr>
    <tr>
        <th class="short nowrap">Issued</th>
        <th class="short nowrap">Outstanding</th>
        <th class="short nowrap" id="header-1"></th>
        <th class="short nowrap" id="header-2"></th>
    </tr>
</thead>
<script type="text/javascript">
    function setDataTableHeader() {
        months = ["Jan", "Feb", "Mar", "Apr", "May", "Jun", "Jul", "Aug", "Sep", "Oct", "Nov", "Dec"];
        filteredType = $('#filteredType').val();
        year = $('#filterYear').val();
        month = $('#filterMonth').val();
        quarter = $('#filterQuarter').val();
        header1 = "Q"+ quarter + " " + year;
        header2 = "YTD " + year;
        if (filteredType == "monthly") {
            header1 = months[month-1] + " " + year;
            header2 = "YTD " + year;
        }

        document.getElementById("header-1").innerHTML = header1;
        document.getElementById("header-2").innerHTML = header2;

    }
</script>