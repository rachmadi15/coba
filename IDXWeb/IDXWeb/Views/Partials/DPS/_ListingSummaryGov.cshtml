            <th class="short nowrap" colspan="2">Outstanding</th>
            <th rowspan="2"></th>
            <th class="short nowrap" colspan="4">Trading</th>
        </tr>
        <tr>
            <th class="short nowrap sum">Series</th>
            <th class="short nowrap sum">b. IDR</th>
            <th class="short nowrap sum">m. USD</th>
            <th class="short nowrap sum">Vol., b. IDR</th>
            <th class="short nowrap sum">Freq., x</th>
            <th class="short nowrap sum">Vol., m. USD</th>
            <th class="short nowrap sum">Freq., x</th>
        </tr>
